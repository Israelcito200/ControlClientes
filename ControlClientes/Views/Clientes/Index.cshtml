@model List<Cliente>

<div class="container mt-4">
    <h2 class="text-center text-primary">Lista de Clientes</h2>

    <a href="/Clientes/Crear" class="btn btn-success mb-3">➕ Agregar Cliente</a>

    <table class="table table-hover table-bordered">
        <thead class="table-dark">
    <tr>
        <th>Nombre</th>
        <th>Correo</th>
        <th>Teléfono</th>
        <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cliente in Model)
            {
                <tr>
            <td>@cliente.Nombre</td>
            <td>@cliente.Correo</td>
            <td>@cliente.Telefono</td>
            <td>
                <a href="/Clientes/Editar/@cliente.Id">✏️ Editar</a> |
                <a href="/Clientes/Eliminar/@cliente.Id">❌ Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>