@model Cliente

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <h2 class="text-center text-primary">➕ Agregar Cliente</h2>

        <form asp-action="Crear" method="post">
            <div class="mb-3">
                <label class="form-label fw-bold">Nombre:</label>
                <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre" required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Correo:</label>
                <input asp-for="Correo" type="correo" class="form-control" placeholder="Ingrese el email" required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Teléfono:</label>
                <input asp-for="Telefono" name="Telefono" required />
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success">✅ Guardar Cliente</button>
                <a href="/Clientes" class="btn btn-secondary">🔙 Volver</a>
            </div>
        </form>

    </div>
</div>


   
