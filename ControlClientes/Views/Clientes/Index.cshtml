@model List<Cliente>

<h2>Lista de Clientes</h2>

<a href="/Clientes/Crear">➕ Agregar Cliente</a>

<table border="1">
    <tr>
        <th>Nombre</th>
        <th>Correo</th>
        <th>Teléfono</th>
        <th>Acciones</th>
    </tr>
    @foreach (var cliente in Model)
    {
        <tr>
            <td>@cliente.Nombres</td>
            <td>@cliente.Correo</td>
            <td>@cliente.Telefono</td>
            <td>
                <a href="/Clientes/Editar/@cliente.Id">✏️ Editar</a> |
                <a href="/Clientes/Eliminar/@cliente.Id">❌ Eliminar</a>
            </td>
        </tr>
    }
</table>
